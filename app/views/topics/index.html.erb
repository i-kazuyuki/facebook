<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <div class="row">
      <%= form_for(@topic) do |f| %>
        <%= f.label :✏️投稿を作成 %>
        <%= f.text_field :content, class: 'form-control', placeholder:"今なにしてる？"  %>
        <br>
        <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>

    <% @topics.each do |topic| %>
    <div class="row">
      <p><%= profile_img(topic.user) %><b><%= topic.user.name %></b></p>
      <%= link_to topic_path(topic) do %>
        <h4><strong><%= topic.content %></strong></h4>
      <% end %>
      <%= link_to "編集", edit_topic_path(topic.id) %>
      <%= link_to "削除", topic_path(topic.id), method: :delete, data: {confirm: '本当に削除していいですか？'} %>
    </div>
    <% end %>
  </div>
</div>
