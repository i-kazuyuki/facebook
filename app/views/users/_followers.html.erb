<div class="follow">
  <h3 class="follow-title"><i class="fa fa-users fa-pink"></i>フォロワー<span class="count">・<%= @user.followers.count %>人</span></h3>
  <ul>
    <% @user.followers.each do |user| %>
    <li>
      <p class="follow-user-img"><%= profile_img(user) %></p>
      <p class="follow-user-name"><%= link_to user.name, user %></p>
    </li>
    <% end %>
  </ul>
</div>
